{
   "$schema":"https://vega.github.io/schema/vega-lite/v5.json",
   "title":"Chocolate Bar Over Years (2006 - 2020)",
   "width":800,
   "height":500,
   "projection":{
      "type":"equalEarth",
      "rotate":[
         -375,
         0,
         0
      ]
   },
   "data":{
      "url":"https://raw.githubusercontent.com/atou0004/3179/main/choropleth_map/js/ne_110m.json",
      "format":{
         "type":"topojson",
         "feature":"ne_110m_admin_0_countries"
      }
   },
   "layer":[
      {
         "data":{
            "url":"https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format":{
               "type":"topojson",
               "feature":"oceans"
            }
         },
         "mark":{
            "type":"geoshape",
            "fill":"skyblue"
         }
      },
      {
         "data":{
            "url":"https://raw.githubusercontent.com/atou0004/3179/main/choropleth_map/js/ne_110m.json",
            "format":{
               "type":"topojson",
               "feature":"ne_110m_graticules_30"
            }
         },
         "mark":{
            "type":"geoshape",
            "fill":null,
            "stroke":"white"
         }
      },
      {
         "transform":[
            {
               "calculate":"'No Chocolate Data Available In ' + datum.properties.NAME",
               "as":"nochocolate"
            }
         ],
         "mark":{
            "type":"geoshape",
            "fill":"lightgray",
            "stroke":"#969696"
         },
         "encoding":{
            "tooltip":{
               "field":"nochocolate"
            },
            "strokeOpacity":{
               "condition":{
                  "param":"continent_highlight",
                  "value":0.8
               },
               "value":0.2
            }
         }
      },
      {
         "transform":[
            {
               "lookup":"properties.NAME",
               "from":{
                  "data":{
                     "url":"https://raw.githubusercontent.com/atou0004/3179/main/Assgn2/data/chocolate_country_avg_rating.csv"
                  },
                  "key":"company_location",
                  "fields":[
                     "avg_rating"
                  ]
               }
            }
         ],
         "params":[
            {
               "name":"continent_highlight",
               "select":{
                  "type":"point",
                  "on":"mouseover"
               }
            }
         ],
         "mark":{
            "type":"geoshape",
            "stroke":"#cccccc",
            "strokeWidth":0.5
         },
         "encoding":{
            "color":{
               "field":"avg_rating",
               "title":"Chocolate Average Rating",
               "type":"quantitative",
               "scale":{
                  "type":"threshold",
                  "domain":[
                     1,
                     2,
                     3,
                     4
                  ],
                  "range":[
                     "#feedde",
                     "#fdbe85",
                     "#fd8d3c",
                     "#e6550d",
                     "#a63603"
                  ]
               }
            },
            "tooltip":[
               {
                  "field":"properties.NAME",
                  "type":"nominal",
                  "title":"Country"
               },
               {
                  "field":"avg_rating",
                  "type":"quantitative",
                  "title":"Average Rating",
                  "format":".2f"
               }
            ],
            "opacity":{
               "condition":{
                  "param":"continent_highlight",
                  "value":1
               },
               "value":0.6
            }
         }
      }
   ],

   "config":{
      "title":{
         "font":"sans-serif",
         "fontSize":18
      },
      "background":"#FFFFFF"
   }
}
