{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Chocolate Bar in 2020",
    "width": 800,
    "height": 500,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/atou0004/3179/main/choropleth_map/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
    "layer":[
  
      {"data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
      },
      
      {"data": {
      "url": "https://raw.githubusercontent.com/atou0004/3179/main/choropleth_map/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
      },
  
      {
      "transform": [{"calculate": "datum.properties.NAME", "as": "note"}],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
  
      {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/atou0004/3179/main/Assgn2/data/chocolate.csv"
            },
            "key": "company_location",
            "fields": ["rating"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "rating",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [2, 3, 4],
            "range": ["#fdbb84","#fc8d59","#e34a33","#b30000"]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "company_location"
          }
          ]
        } 
      }
    ]
  } 
