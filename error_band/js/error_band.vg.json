{
   "$schema":"https://vega.github.io/schema/vega-lite/v5.json",
   "width":700,
   "height":350,
   "title":{
      "text":"Pecentage of Cocoa Used Over Years (2006 - 2020)"
   },
   "description": "An error band chart that shows the Pecentage of Cocoa Used Over Years (2006 - 2020)",
   "data":{
      "url":"https://raw.githubusercontent.com/atou0004/3179/main/Assgn2/data/chocolate.csv"
   },
   "encoding":{
      "x":{
         "field":"review_date",
         "timeUnit":{
            "unit":"year"
         },
         "axis":{
            "domain":false,
            "grid":false,
            "ticks":false
         },
         "title":"Review Year"
      },
      "y":{
         "type":"quantitative",
         "scale":{
            "zero":false
         },
         "axis":{
            "domain":false,
            "grid":false,
            "ticks":false
         },
         "title":"Mean of Cocoa Percentage (95% CIs)"
      }
   },
   "layer":[
      {
         "mark":{
            "type":"errorband",
            "extent":"ci",
            "borders":{
               "opacity":0.7,
               "strokeDash":[
                  6,
                  2
               ]
            }
         },
         "encoding":{
            "y":{
               "field":"cocoa_percent"
            }
         }
      },
      {
         "mark":"line",
         "encoding":{
            "y":{
               "field":"cocoa_percent",
               "aggregate":"mean"
            }
         }
      }
   ],
   "config":{
      "title":{
         "font":"sans-serif",
         "fontSize":18
      },
      "background":"#C4A484"
   },
   "view":{
      "stroke":null
   }
}
